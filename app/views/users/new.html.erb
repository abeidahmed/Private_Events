<main>
  <h1 class="h3" >Create new user <h1><br />
  <div class="container jumbotron text-center w-50">
    <%= form_with model: @user do |form| %>
       <% if @user.errors.any? %>
        <div class="alert alert-danger">
         <% @user.errors.full_messages.each do |messages|%>
          <div><%= messages %></div>
         <% end %>
        </div>
      <% end %>

      <p>
        <%= form.label :name %>
      </p>
      <p>
        <%= form.text_field :name, class: 'form-control'%>
      </p>
      <p>
        <%= form.submit 'Create account', class: 'btn btn-outline-success'%>
      </p>
    <% end %>
  <div> 
<%= link_to 'Login', new_session_path, class: 'btn bg-primary text-white'%>
</main>


